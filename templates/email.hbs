<!-- templates/email.hbs -->
<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>{{subject}}</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f4;
    }

    .container {
      width: 80%;
      margin: 0 auto;
      background-color: #fff;
      padding: 20px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .header {
      text-align: center;
      padding: 10px 0;
      background-color: #007bff;
      color: #fff;
      justify-content: space-between;
    }


    .footer {
      text-align: center;
      padding: 10px 0;
      background-color: #f1f1f1;
      color: #555;
    }
    .content {
      padding: 20px;
      margin-left: 2;
      justify-content: !space-between;
    }


    .logo {
      width: 100px;
      /* Adjust logo width as needed */
      height: auto;
    }

    .logo-text {
      font-weight: bold;
      color: #428bca;
      font-size: 1.5rem;
      /* Adjust font size as needed */
      margin: 0;
    }

    @media (max-width: 768px) {

      /* Adjust breakpoint as needed for smaller screens */
      .header {
        flex-direction: column;
        /* Stack logo and company name on smaller screens */
        align-items: center;
      }

      .logo-text {
        margin-top: 1rem;
        /* Add some spacing after logo on smaller screens */
      }
    }
  </style>
</head>

<body>
  <div class="container">
    {{!-- <header class="header" style="background-color: #f2f2f2; display: flex; align-items: center; padding: 1.5rem 2rem;">
